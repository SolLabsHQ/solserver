{
  "name": "solserver",
  "version": "1.0.0",
  "description": "SolServer is the backend runtime for SolMobile v0.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:worker": "tsx watch src/worker.ts",
    "dev:all": "concurrently -n web,worker \"npm run dev\" \"npm run dev:worker\"",
    "test": "vitest run --no-file-parallelism --testTimeout 20000",
    "build": "tsc -p tsconfig.build.json",
    "start:worker": "node dist/worker.js",
    "deploy:staging": "fly deploy -a solserver-staging",
    "deploy:prod": "fly deploy -c fly.prod.toml -a solserver-prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SolLabsHQ/solserver.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20"
  },
  "bugs": {
    "url": "https://github.com/SolLabsHQ/solserver/issues"
  },
  "homepage": "https://github.com/SolLabsHQ/solserver#readme",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "better-sqlite3": "^12.6.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-sse-v2": "4.2.2",
    "pino": "^9.5.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "concurrently": "^9.2.1",
    "pino-pretty": "^13.1.3",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264"
}
